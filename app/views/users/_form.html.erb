<%= form_for current_user, :html => {:multipart => true} do |f| %>
  <% if current_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% current_user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>    
    <%= f.text_field :name %>
  </div>
<br />

  <div class="field">
    <%= f.label :image %>
    <% if current_user.image_url %>
      <%= image_tag current_user.image_url(:upload).to_s, :class => 'img-responsize' %>
    <% else %>
      <%= image_tag 'blank.png', :class => 'img-responsize' %>
    <% end %>
    <%= f.file_field :image %>
  </div>
<br />

  <div class="field">
    <%= f.label :password %>
    <%= f.text_field :password %>
  </div>
<br />

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
