<div class="span4 offset4">

  <div class="padded">

    <div class="login box" style="margin-top: 80px;">

      <div class="box-header">
        <span class="title">Sign Up</span>
      </div>

      <div class="box-content padded">
        <%= form_for @user, html: {class:"separate-sections"} do |f| %>
            <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
          <div class="input-prepend">
          <span class="add-on" href="#">
            <i class="icon-user"></i>
          </span>
            <%= f.text_field :name, placeholder: "Name" %>
          </div>

          <div class="input-prepend">
          <span class="add-on" href="#">
            <i class="icon-key"></i>
          </span>
            <%= f.password_field :password, placeholder: "Password" %>          
          </div>

          <div class="input-prepend">
          <span class="add-on" href="#">
            <i class="icon-key"></i>
          </span>
            <%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %>
          </div>

          <div>
            <%= f.submit "Sign Up", class:"btn btn-blue btn-block" %>
          </div>

        <% end %>

        <div>
          <a href="login.html">
              Already have an account? <strong><%= link_to "Sign In", login_path %></strong>
          </a>
        </div>
      </div>

    </div>

    <div class="row-fluid">
      <!-- <div class="span6">
        <a href="#" class="btn btn-facebook btn-block"><i class="icon-facebook-sign"></i> Facebook</a>
      </div>
      <div class="span6">
        <a href="#" class="btn btn-twitter btn-block"><i class="icon-twitter"></i> Twitter</a>
      </div> -->
    </div>
  </div>
 