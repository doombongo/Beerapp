<% @comments.each do |comment| %>
      <div class="info">
        <span class="name">
            <% if comment.user %>
              <%= link_to comment.user.name, comment.user %>
            <% end %>
          </span>
          <div class="avatar">
            <%= image_tag current_user.image_url(:avatar).to_s %>
          </div>
        </span>
        <span class="time"><i class="icon-time"></i> 3 minutes ago</span>
      </div>
      <div class="content">
        <blockquote>
          <%= comment.content.html_safe %>
        </blockquote>
      </div>
      <% if can? :manage, comment %>
        <%= link_to "Edit", [:edit, @commentable, comment] %>
        <%#<%= link_to 'Destroy', [:destroy, @commentable, comment], method: :delete, data: { confirm: 'Are you sure?' }%>      %>
      <% end %>
    </li>
<% end %>
