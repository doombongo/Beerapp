<% @comments.each do |comment| %>
    <li class="arrow-box-left gray">
      <div class="avatar"><img class="avatar-small"></div>
      <div class="info">
        <span class="name">
          <span class="label label-green">
            <% if comment.user %>
              <%= link_to comment.user.name, comment.user %>
            <% end %>
          </span>
          <div class="avatar">
            <%= link_to image_tag("http://placehold.it/40x40", :class => "avatar-small"), comment.user %>
          </div>
        </span>
        <span class="time"><i class="icon-time"></i> 3 minutes ago</span>
      </div>
      <div class="content">
        <blockquote>
          <%= comment.content.html_safe %>
        </blockquote>
      </div>
      <% if can? :manage, comment %>
        <%= link_to "Edit", [:edit, @commentable, comment] %>
        <%#<%= link_to 'Destroy', [:destroy, @commentable, comment], :confirm => 'Are you sure?', :method => :delete %>%>%>
      <% end %>
    </li>
<% end %>
